<div class="projects box">
	<% if @list_title %><h2><%= @list_title %></h2><% end %>
<ul>
	<%
  @projects.each {|project| %>
		<li class="project <%= cycle("odd", "even") %>"><span style="font-weight: bold;"><%= link_to_project(project) %></span><%
		if project.homepage? %>: <%= link_to(project.homepage, '/projects/' + project.identifier, @html_options) %><% end %></li>
	<% } %>
</ul>
</div>
